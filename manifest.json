{
  "name": "Ruby China for Chrome",
  "version": "1.1",
  "manifest_version": 2,
  "description": "RubyChina for Chrome 是对 http://ruby-china.org 进行增强的 Google Chrome 扩展。",
  "homepage_url": "https://github.com/GDG-Xian/ruby-china-chrome/",
  "background": { "page": "background.html" },
  "options_page": "option.html",
  "icons": {
      "16" : "images/logo-16.png",
      "48" : "images/logo-48.png",
      "128": "images/logo-128.png"
  },
  "default_locale" : "en",
  "browser_action": {
    "default_icon": "images/logo-48.png",
    "default_title": "Ruby China",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://ruby-china.org/*"],
      "css": ["stylesheets/contentstyle.css"],
      "js": ["javascripts/jquery-2.0.3.min.js", "javascripts/contentscript.js"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": ["tabs","http://ruby-china.org/*", "http://epiceditor.com/*" ]
}
