{
  "name": "Ruby China 插件",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Ruby China 插件",
  "homepage_url": "http://ruby-china.org/users/qichunren",
  "background": { "page": "background.html" },
  "options_page": "option.html",
  "icons": {
      "16" : "images/logo-16.png",
      "48" : "images/logo-48.png",
      "128": "images/logo-128.png"
  },
  "default_locale" : "en",
  "browser_action": {
    "default_icon": "images/logo-48.png",
    "default_title": "Ruby China",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://ruby-china.org/*"],
      "js": ["javascripts/jquery-1.7.1.min.js", "javascripts/contentscript.js"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": ["tabs","http://ruby-china.org/*" ]
}
